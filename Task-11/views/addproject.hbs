      <div class="form-center" >
        <h3>Add My Project</h3>
        <form class="form-input" method='POST'
                action='/addproject'>
            <div>
                <label for="name" class="form-label">Name</label>
                <input name="name" type="text" class="form-control" id="name">
            </div>
            <div class="date-group">
                <div class="start-date">
                  <label for="start-date" class="form-label">Start Date</label>
                  <input name="startDate" type="date" class="form-control" id="start-date" />
                </div>
                <div class="end-date">
                  <label for="end-date"  class="form-label">End Date</label>
                  <input name="endDate"type="date" class="form-control" id="end-date" />
                </div>
            </div>
            <div>
                <label for="summary" class="form-label">Summary</label>
                <input name="summary"type="text" class="form-control" id="summary">
            </div>
            <div>
                <label for="description" class="form-label">Description</label>
                <textarea name="description"class="form-control" id="description"></textarea>
            </div>
            <div class="checkboxs">
                <div class="checkbox-group form-check">
                  <input
                    name="nodejs"type="checkbox" value="node-js" class="form-check-input" id="nodejs"
                  />
                  <label for="nodejs" class="form-check-label">Node JS</label>
                </div>
                <div class="checkbox-group form-check">
                  <input name="reactjs"type="checkbox" value="react" class="form-check-input" id="reactjs"/>
                  <label for="reactjs"class="form-check-label">React JS</label>
                </div>
                <div class="checkbox-group form-check">
                  <input name="vuejs"type="checkbox" value="vuejs" class="form-check-input" id="vuejs" />
                  <label for="vuejs" class="form-check-label">Vue JS</label>
                </div>
                <div class="checkbox-group form-check">
                  <input name="javascript"type="checkbox" value="js" class="form-check-input" id="javascript" />
                  <label for="javascript" class="form-check-label">Javascript</label>
                </div>
            </div>
            <div>
                    <label for="input-image" class="form-label">Upload Image</label>
                    <input name="image"class="form-control" type="file" id="input-image">
            </div>
            <div>
                <button class="btn btn-primary px-5">Submit</button>
            </div>
        </form>
    </div>


