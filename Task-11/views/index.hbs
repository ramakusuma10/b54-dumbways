                  <h3>Rama Kusuma</h3>
                  <p id="title">Fullstack Developer</p>
                </div>
              </div>
            </div>
        </div>
        <div class="my-5 cover projects">
          <h1 class="mt-5">MY PROJECTS</h1>
          <div class="my-5 showlist">

              {{#each projects}}
            <div class="card d-flex flex-column text-center">
              <a href="./detailproject/{{this.id}}" class="project-detail-link">
                <img src={{this.image}} class="project-image" alt="Project image">
                <h4 class="card-title">{{this.name}}</h4>
              </a>
              <div class="px-4 mt-1 py-3">
                <p class="project-duration">Durasi: {{this.duration}}</p>
                <p class="project-summary">
                  {{this.summary}}
                </p>
                <div class="tech-group">
                  {{{this.techHTML}}}
                </div>
                <div class="button-group">
                    <div class="btn btn-primary w-100 d-flex justify-content-center">Edit</div>
                    <div class="btn btn-warning w-100 d-flex justify-content-center">Delete</div>
