        .btn-warning{background-color: red; color: white; border-color: red; border-radius: 20px}
        .btn-warning:hover{ transition: 0.3s; opacity: 0.6; background-color: red; color: white; border-color: red}
        .card{width: 350px; box-shadow: 2px 2px 10px rgba(0,0,0,0.3); }
    </style>
</head>
<body>
        <nav class="navbar navbar-expand-lg bg-body-tertiary shadow position-fixed top-0 z-1 w-100 px-4">
          <div class="container-fluid">
            <img
              src="/assets/img/logo-brand.png"
