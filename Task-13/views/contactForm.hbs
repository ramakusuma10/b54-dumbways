        <div class="form-center" >
        <h3>GET IN TOUCH</h3>
        <form class="form-input" >
            <div>
              <label for="name" class="form-label">Name</label>
              <input type="text" class="form-control" id="name">

              <p class='input-name-warning invisible mb-0 text-danger'>
                        Please insert name.
              </p>
            </div>
            <div >
              <label for="email" class="form-label">Email</label>
              <input type="email" class="form-control" id="email">

              <p class='input-email-warning invisible mb-0 text-danger'>
                        Please insert email.
              </p>
            </div>
            <div >
              <label for="phone" class="form-label">Phone</label>
              <input type="tel" class="form-control" id="phone">

              <p class='input-phone-warning invisible mb-0 text-danger'>
                        Please insert phone.
              </p>
            </div>
            <div>
              <label for="subject" class="form-label">Subject</label>
              <select class="form-select" id="subject">
                <option selected disabled>Choose...</option>
                <option value="Collaboration">Collaboration</option>
                <option value="Greeting">Greeting</option>
                <option value="Offering">Offering</option>
              </select>

              <p class='input-subject-warning invisible mb-0 text-danger'>
                        Pick a Subject.
              </p>
            </div>
            <div>
                <label for="message" class="form-label">Message</label>
                <textarea class="form-control" id="message"></textarea>
                <p class='input-message-warning invisible mb-0 text-danger'>
                        Please message name.
              </p>
            </div>
            <div>
              <button class="btn btn-primary px-5" type="button" onclick="submitHandler()" value="submit">Submit</button>
            </div>
          </form>
        </div>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        crossorigin="anonymous"></script>
